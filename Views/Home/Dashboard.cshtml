@model IEnumerable<TicTacToe.Models.GameRecord>
@{
    ViewData["Title"] = "Dashboard";

    // --- FILTER ---
    // Only show games where there is a clear result (Winner is not null)
    var gameList = Model
        .Where(g => !string.IsNullOrEmpty(g.Winner))
        .OrderByDescending(g => g.CreatedAt) // Optional: Show newest first
        .ToList();
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">Your Game History</h1>
            <p class="lead">Welcome back! Here are your past matches.</p>
        </div>
        <div class="col-md-4 text-end align-self-center">
            <a asp-controller="Game" asp-action="CreateGame" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-play-circle-fill"></i> Start New Game
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (!gameList.Any())
            {
                <div class="text-center p-5">
                    <h3 class="text-muted">No completed games yet.</h3>
                    <p>Finish a game to see it here!</p>
                </div>
            }
            else
            {
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Game No</th>
                            <th>Date Played</th>
                            <th>Winner</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < gameList.Count; i++)
                        {
                            var game = gameList[i];
                            <tr>
                                <td class="fw-bold text-primary">#@(i + 1)</td>

                                <td>@game.CreatedAt.ToString("MMM dd, yyyy - h:mm tt")</td>

                                <td>
                                    @if (game.Winner == "X")
                                    {
                                        <span class="badge bg-danger">X Won</span>
                                    }
                                    else if (game.Winner == "O")
                                    {
                                        <span class="badge bg-success">O Won</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Draw</span>
                                    }
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <a asp-controller="Game" asp-action="Index" asp-route-id="@game.Id" class="btn btn-sm btn-outline-primary">
                                            View Board
                                        </a>

                                        <form asp-controller="Home" asp-action="DeleteGame" method="post" class="ms-2">
                                            <input type="hidden" name="id" value="@game.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this game?');">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
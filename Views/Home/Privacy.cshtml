@{
    ViewData["Title"] = "Developer Details";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .profile-header {
        background: linear-gradient(135deg, #4f46e5, #0ea5e9);
        color: white;
        border-radius: 18px;
        padding: 28px 32px;
    }

    .profile-card {
        border-radius: 18px;
        border: none;
    }

    .profile-img {
        width: 320px;
        height: 210px;
        object-fit: cover;
        border-radius: 16px;
        box-shadow: 0 15px 30px rgba(0,0,0,.15);
        border: 4px solid #ffffff;
    }

    .info-label {
        color: #64748b;
        font-weight: 600;
    }

    .content-box {
        background: #f8fafc;
        border-radius: 14px;
        padding: 18px 20px;
    }
</style>

<div class="container mt-5">

    <div class="card shadow-lg profile-card p-4">

        <!-- HEADER -->
        <div class="profile-header mb-4">
            <h2 class="fw-bold mb-1">Developer Profile</h2>
            <p class="mb-0">Meet the developer behind the Tic Tac Toe game</p>
        </div>

        <div class="d-flex flex-column flex-md-row gap-4">

            <!-- IMAGE -->
            <div>
                <img src="~/images/imran.jpg"
                     alt="Imran Mahmud"
                     class="profile-img">
            </div>

            <!-- TEXT DETAILS -->
            <div>

                <h3 class="fw-bold mb-1">Imran Mahmud</h3>
                <p class="text-muted mb-3">
                    Developer | ASP.NET (C#) MVC | Machine Learning & NLP Enthusiast
                </p>

                <div class="content-box mb-3">
                    <p class="mb-2" style="text-align: justify;">
                        I developed this Tic-Tac-Toe game focusing on clean logic, smooth user
                        experience, and proper project structuring. This project helped me improve
                        debugging skills, problem-solving, and planning features step-by-step.
                    </p>

                    <p class="mb-0" style="text-align: justify;">
                        I am pursuing a BSc in Computer Science & Engineering. I’m especially
                        interested in <strong>ASP.NET (C#) MVC architecture</strong>, and I am
                        exploring Machine Learning with a research focus on
                        <strong>Advanced Natural Language Processing (NLP)</strong>.
                    </p>
                </div>

                <!-- CONTACT -->
                <h6 class="fw-bold mb-2">Contact</h6>

                <ul class="list-unstyled">

                    <li class="mb-2 d-flex align-items-center">
